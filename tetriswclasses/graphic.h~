#ifndef GRAPHIC_H
#define GRAPHIC_H
#include <SDL2/SDL.h>
#include <SDL2/SDL_image.h>
#include <SDL2/SDL_ttf.h>
#include <string>
#include <sstream>

class Graphic {
 public:
  Graphic();
  ~Graphic();
  void render(SDL_Renderer *renderer, SDL_Rect* destRect);
  void initFont();
  void loadGraphic(std::string textString, SDL_Renderer *renderer);
  void free();
  
 private:
  SDL_Texture* graphicTexture;
  int width;
  int height;
  TTF_Font* graphicFont;
  SDL_Color textColor;

};
#endif
